<a href="<%= user_path(current_user) %>">
  <%= gravatar_for current_user, size: 52 %>
</a>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
  <%= pluralize(current_user.records.count, "record") %>
</span>
<span class='totalsteps'>
  <%= pluralize(current_user.total, "step") %> so far
</span>
